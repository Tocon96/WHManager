<Window x:Class="WHManager.DesktopUI.Views.FormViews.ManageUserFormView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WHManager.DesktopUI.Views.FormViews"
        mc:Ignorable="d"
       Title="" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStyle="None">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Background" Value="#1976d2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="TextAlignment" Value="Center"></Setter>
        </Style>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Cursor" Value="Arrow" />
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#1565c0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" BorderThickness="0" BorderBrush="Black" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="Silver"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <!--TextBlock-->
        <TextBlock x:Name="textBlockManageUser" Grid.ColumnSpan="3" Grid.Row="0" Height="30" FontSize="18" Background="#1565c0">Dodaj Nowego Użytkownika</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="0" PreviewMouseDown="textBoxName_PreviewMouseDown"  Grid.ColumnSpan="3">Nazwa</TextBlock>
        <TextBlock Grid.Row="3" Grid.Column="0" PreviewMouseDown="textBoxPassword_PreviewMouseDown"  Grid.ColumnSpan="3">Hasło</TextBlock>
        <TextBlock Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3">Rola</TextBlock>
        <!--TextBox-->
        <TextBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Name="textBoxName"></TextBox>
        <TextBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Name="textBoxPassword"></TextBox>
        <!--ComboBox-->
        <ComboBox Name="comboboxRoles"  Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="6" DisplayMemberPath="Name"></ComboBox>
        <!--Button-->
        <Button Grid.Column="0" Grid.Row="7" Name="buttonCancel" Style="{StaticResource ButtonStyle}" Width="150" HorizontalAlignment="Left" Click="ButtonCancelClick">Anuluj</Button>
        <StackPanel Grid.Row="13" Grid.Column="1" Orientation="Vertical">
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
        </StackPanel>
        <Button Grid.Column="2" Grid.Row="7" Name="buttonAddUser" Style="{StaticResource ButtonStyle}" Width="150" HorizontalAlignment="Right" Click="ButtonAddUserClick">Zatwierdź</Button>
    </Grid>
</Window>
